/*
<%@ page contentType="text/css" %>
*/

body {
	font-family: Arial, Helvetica, sans-serif;
	background-image: url(/welcome/images/page_background.gif);
	background-color: #A8A8E6;
	color: #ffffff;
    font-size: small;
}

/* For displaying error and info messages */
div.errors {
    border: 1px solid #ff0000;
    background-color: #ffdfde;
    padding: 2px;
}
div.validate {
    border: 1px solid #ff0000;
    background-color: #ffdfde;
    display: none;
    padding: 2px;
}
div.messages {
    border: 1px solid #a5ce4a;
    background-color: #fbfbe1;
    padding: 2px;
}
div.errors b, div.messages b, div.validate b {
    font-weight: normal;
    color: black;
	display: list-item;
	list-style-type: none;
}

div.welcome {
    width: 790px;
    border-width: 2px;
    border-color: #0000ff;
    border-style: solid;
    background-color: #ffffff;
    margin-left: auto;
    margin-right: auto;
}

div.menubar {
    background-color: #34488D;
    padding: .5em;
}

div.footer {
    clear: both;
    text-align: center;
    font-size: x-small;
    padding-top: 2em;
    padding-bottom: 2em;
}

div.menubar span {
    padding: .5em 1em .5em 1em;
    font-weight: bold;
}

div.menubar a {
    text-decoration: none;
    /*color: inherit;  //IE6 does not support color: inherit */
    color: #ffffff;
}

th {
    text-align: right;
    vertical-align: top;
}

td {
    vertical-align: top;
}

li {
    list-style-image: url(/welcome/images/list_dot.gif);
    margin-top: .5em;
}

div.fail {
	padding: 1em;
}
div.info {
    margin-left: 1%;
    margin-right: 1%;
    margin-top: .5em;
    margin-bottom: .5em;
}

.row div {
    margin-top: .5em;
    margin-bottom: .5em;
}

hr.line {
    height: 1px;
    width: 90%;
}

/* One column layout */
/* Column One */
.one-col div.col-one {
    float: none;
    width: 98%;
}

/* Two column layout */
/* Column One */ 
.two-col div.col-one { 
    float: left;
    width: 48%; 
}
/* Column Two */
.two-col div.col-two { 
    float: left;
    width: 48%; 
    margin-left: 1%;
}

/* Three column layout */
/* Column One */
.three-col div.col-one { 
    float: left; 
    width: 32%; 
}
/* Column Two */
.three-col div.col-two { 
    float: left;
    margin-left: 1%;
    width: 32%; 
}
/* Column Three */
.three-col div.col-three { 
    float: left; 
    margin-left: 1%;
    width: 32%;
}

h1 {
	font-size: 18px;
	font-weight: bold;
	color: #34488D;
}
h2 {
	font-size: 16px;
	font-weight: bold;
	color: #34488D;
}
h3 {
	font-size: 14px;
	font-weight: bold;
	color: #34488D;
}
h4 {
	font-size: 12px;
	font-weight: bold;
	color: #34488D;
}

img.right {
    float: right;
    margin-left: 1em;
    margin-top: 1em;
    margin-bottom: 1em;
}

.box {
    background-image: url(/welcome/images/menu_background.gif);
    background-color: #34488D;
    border-style: solid;
    border-color: #ffffff;
    border-width: 1px;
}

div.box {
    padding: 1em;
}
.box a {
    text-decoration: none;
    color: #ffffff;
}
/* FAQ styles */
#odo ul {
    margin-left: 10px; 
}
#odo li {
    list-style-type: none;
    list-style-image: none;
}
#odo li a {
    color: #5f7d20;
    font-weight: bold;
    text-decoration: none;
}
#odo li ul li {
    font-weight: bold;
    padding-bottom: 1em;
}